        const MINT_COLOR = '#6FEAD1';
        const STATIC_IMAGE_URL = "https://i.ibb.co/LXWLn6Wc/Chat-GPT-Image-Feb-2-2026-04-07-42-PM.png";

        function createFavicon() {
            const canvas = document.createElement('canvas');
            canvas.width = 32; canvas.height = 32;
            const ctx = canvas.getContext('2d');
            ctx.beginPath(); ctx.arc(16, 16, 16, 0, Math.PI * 2);
            ctx.fillStyle = MINT_COLOR; ctx.fill();
            const img = new Image();
            img.crossOrigin = "anonymous";
            img.src = STATIC_IMAGE_URL;
            img.onload = function() {
                ctx.save(); ctx.beginPath(); ctx.arc(16, 16, 14, 0, Math.PI * 2); ctx.clip();
                ctx.drawImage(img, -5, 0, 42, 42); ctx.restore();
                const link = document.createElement('link');
                link.rel = 'icon'; link.href = canvas.toDataURL();
                document.head.appendChild(link);
            };
        }

